{

	"components": {

		// AngularServer configuration (remove/comment to disable)
		"angular": {
			"class": "AngularServer",
			"useBower": true,
			"compressAngular": true
		},

		// StaticServer configuration (remove/comment to disable)
		"static": {
			// "debug": true,
			// "verbosity": 5,
			"class": "StaticServer"
		},

		// Session configuration (remove/comment to disable)
		"session": {
			// "debug": true,
			// "verbosity": 5,
			"class": "Session"
		},

		// Express configuration (remove/comment to disable)
		"express": {
			"class": "Express",
			"use": {
				"express.favicon": [],
				"express.methodOverride": [],
				"app.router":true
			}
		},

		// ControllerServer configuration (remove/comment to disable)
		"controller": {
			// "debug": true,
			// "verbosity": 5,
			"class": "ControllerServer",
			"defaultController": "main",
			"errorPage": "main/error"
		},

		// Rest Controller: POST
		"postREST": {
			"class": "PostRest"
		},

		// Rest Controller: LOGIN
		"loginREST": {
			"class": "LoginRest"
		},

		// View configuration (remove/comment to disable)
		"view": {
			"class": "View",
			"titleTemplate": "{self.title} â€” {app.title}",
			"language": "en",
			"menu": {},
			"menuTemplate":"<ul>{list}</ul>",
			"menuItemTemplate":"<li><a href='{url}'>{label}</a></li>",
			"loadScriptPath": "js/"
		},

		// UrlManager configuration (remove/comment to disable)
		"urlManager": {
			"class": "UrlManager",
			"rules": {
				"<page:\\d+>/?":"<controller:main>/<action:index>",
				"<action:post>/<id:.+>":"<controller:main>/<action>",
				"<action:new>/?":"<controller:main>/<action>",
				"<action:delete>/<id:.+>":"<controller:main>/<action>"
			}
		},

		// DbConnection configuration (remove comment to enable)
		"database": {
			"class": "DbConnection",
			"alias": "db",
			"engine": "mongo",
			"address": "127.0.0.1",
			"port": 27017,
			"database": "blongular"
		}

	}

}